{
    "$schema": "https://schema.railpack.com",
    "steps": {
        "install": {
            "inputs": [{ "local": true, "include": ["."] }],
            "commands": [
                "pnpm install --no-frozen-lockfile"
            ]
        },
        "build": {
            "commands": [
                "...",
                "pnpm --filter admin build"
            ]
        }
    },
    "deploy": {
        "startCommand": "pnpm --filter admin start"
    }
}